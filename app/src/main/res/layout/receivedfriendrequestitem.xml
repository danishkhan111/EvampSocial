<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_item_person"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/browser_actions_divider_color">

        <ImageView
            android:id="@+id/imageView_profile_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            tools:src="@drawable/ic_account_circle_black_24dp" />

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="22dp"
            android:hint="Name"
            android:layout_toEndOf="@+id/imageView_profile_picture"
            android:textSize="25sp" />

        <!--<Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click"
            android:layout_marginStart="280dp"
            android:layout_marginTop="10dp"/>-->


        <!--<ImageView
            android:id="@+id/acceptrequest_btn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            tools:src="@drawable/ic_check_black_24dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:id="@+id/cancelrequest_btn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            tools:src="@drawable/ic_close_black_24dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="15dp"/>-->
    </RelativeLayout>

</android.support.v7.widget.CardView>